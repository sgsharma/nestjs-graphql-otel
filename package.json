{
  "name": "nestjs-yoga",
  "version": "1.0.0",
  "description": "",
  "author": "t.kosminov",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:build": "NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register -r dist/instrumentation.js dist/src/main.js",
    "start:repl": "ts-node --files -r tsconfig-paths/register src/repl.ts",
    "start:build:repl": "NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register dist/repl.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "db:migration:create": "npm run typeorm:cli -- migration:create ./src/database/migrations/created",
    "db:migration:generate": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:generate ./src/database/migrations/generated",
    "db:migration:run": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:run",
    "db:migration:revert": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:revert",
    "db:schema:sync": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts schema:sync",
    "prepare": "husky install"
  },
  "dependencies": {
    "@envelop/core": "^4.0.0",
    "@envelop/response-cache": "^5.1.0",
    "@graphql-tools/delegate": "^10.0.0",
    "@graphql-tools/executor-http": "^1.0.1",
    "@graphql-tools/stitch": "^9.0.0",
    "@graphql-tools/stitching-directives": "^3.0.0",
    "@graphql-tools/utils": "^10.0.3",
    "@graphql-tools/wrap": "^10.0.0",
    "@graphql-yoga/nestjs": "2.0.3",
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/graphql": "^12.0.7",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.0.12",
    "@nestjs/typeorm": "^10.0.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.44.0",
    "@opentelemetry/sdk-metrics": "^1.23.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/sdk-trace-node": "^1.23.0",
    "@whatwg-node/fetch": "^0.9.7",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.7.1",
    "helmet": "^7.0.0",
    "nestjs-graphql-easy": "^3.1.1",
    "node-abort-controller": "^3.1.1",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "sofa-api": "^0.18.0",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^2.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.1",
    "@nestjs/schematics": "^10.0.1",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.3",
    "@types/nodemon": "^1.19.2",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "patch-package": "^7.0.0",
    "prettier": "^2.8.8",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
